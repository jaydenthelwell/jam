<div class="background__wrapper_user">
  <h1 style="font-family: Montserrat;
    position: absolute;
    top: 2%;
    text-align: center;
    left: 21%;
    font-weight: 900;
    color: white;">P O S S I B L E<BR>M A T C H</h1>
  <%# <div data-user="<%= user.id" class="users-container"> %>
  <div class="card" data-hide-cards-target="cards">
    <div class="profile-name">
      <ul><li><%= user.name %></li></ul>
    </div>
    <div>
      <%= image_tag("play_bar.png", alt: "Play bar", class: "play-bar") %>
    </div>
  </div>
  <div class="photo">
    <div class="user-image-wrapper">
      <%= cl_image_tag user.photos.first.key, class: "d-block" if user.photos.present? %>
    </div>
  </div>
  <div class="scroll">
    <h6 style="font-family: Montserrat;
    position: absolute;
    top: 41%;
    text-align: center;
    left: 29%;
    font-weight: 900;
    color: white;">S C R O L L&nbsp;&nbsp;&nbsp;D O W N</h6>
    <%= image_tag("scroll_down.png", alt: "Scroll down", class: "scroll-down") %>
  </div>
  <div class="prompts-container">
    <div class="user-prompts">
      <div class="flex-items card-extended">
        <h2 class="prompt">A little about me...</h2>
        <div class=" card-section">
          <%= user.description %>
        </div>
        <div>
          <% if user.photos.length > 1 %>
            <div class="user-image-wrapper">
              <%= cl_image_tag user.photos[1].key, class: "d-block" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="flex-items card-extended">
        <h4 class="prompt">Currently on repeat:</h4>
        <div class="flex-items card-section">
          <%= user.on_repeat %>
        </div>
        <div>
          <% if user.photos.length > 2 %>
            <div class="user-image-wrapper">
              <%= cl_image_tag user.photos[2].key, class: "d-block" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="flex-items card-extended">
        <h4 class="prompt">If my life had a theme song...</h4>
        <div class="flex-items card-section">
          <%= user.all_time_favorite %>
        </div>
        <div>
          <% if user.photos.length > 3 %>
            <div class="user-image-wrapper">
              <%= cl_image_tag user.photos[3].key, class: "d-block" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="flex-items card-extended">
        <h4 class="prompt">My go to karaoke song</h4>
        <div class="flex-items card-section">
          <%= user.go_to_karaoke %>
        </div>
        <div>
          <% if user.photos.length > 4 %>
            <div class="user-image-wrapper">
              <%= cl_image_tag user.photos[4].key, class: "d-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
